<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="File" target="file"
			filename="C:\Users\Lenovo\eclipse-workspace\QuizAppFlutterTesting\Logs\app.log">
			<Layout type="PatternLayout"
				pattern="%d{HH:mm:ss.SSS} [%t]%-5level %logger{36} - msg%n" />
		</File>
		<!-- Add more appenders if needed -->
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
